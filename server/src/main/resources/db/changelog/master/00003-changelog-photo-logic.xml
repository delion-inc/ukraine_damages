<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="create-photo-logic" author="Roman">
        <dropColumn tableName="damage_report">
            <column name="photo_before"/>
        </dropColumn>
        <dropColumn tableName="damage_report">
            <column name="photo_after"/>
        </dropColumn>

        <addColumn tableName="damage_report">
            <column name="photo_before" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="photo_after" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>